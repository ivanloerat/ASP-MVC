@model System.Data.DataTable

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table>
    <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Precio</th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
    <tr>
        <td>@Model.Rows[i][0]</td>
        <td>@Model.Rows[i][1]</td>
        <td>@Model.Rows[i][2]</td>
        <td>@Model.Rows[i][3]</td>
        <td>
            <a href="@Url.Action("Edit","Productos",new {@id=Model.Rows[i][0]})">Editar</a>
            <a href="@Url.Action("Delete","Productos",new {@id=Model.Rows[i][0]})">Eliminar</a>
        </td>
    </tr>
    }
</table>
<a href="@Url.Action("Create","Productos")">Nuevo Producto</a>
